<a href="{{user.href}}">{{user.nickname}}</a>

{{#if user}}
  {{#if space}}
    /
  {{/if}}
{{/if}}

{{#if space}}
  {{#if space.title}}
    <a href="{{space.links.edit}}#" class="selected"><strong>{{space.title}}</strong></a>
  {{/if}}

  {{#each folders}}
    / <strong><a href="#{{path}}">{{title}}</a></strong>
  {{/each}}
  {{#if page}}
    / <span>{{page.title}}</span>
  {{/if}}
  {{#if space_admin}}
    <a rel="tooltip" id="space_settings_link" title="Space settings" class="space-settings-link btn btn-mini btn-primary" href="{{space.links.settings}}">Space Admin</a>
  {{/if}}
{{/if}}
