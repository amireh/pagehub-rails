<li data-url="{{url}}"
    data-parent="{{folder_id}}"
    data-collapsible
    id="folder_{{id}}"
    class="folder{{#unless folder_id}} general-folder{{/unless}}">

  <button data-collapse></button>
  <a href="#{{path}}" class="folder-title"{{#if folder_id}} draggable="true"{{/if}}>
    <i class="icon-folder-close"></i>{{{title}}}
  </a>

  <ol class="listing folders"></ol>
  <ol class="listing pages">
    <li class="empty-folder"><i class="icon-warning-sign"></i> This folder has no pages.</li>
  </ol>
</li>